   "metadata": {
    "editable": true
   },
   "outputs": [],
   "source": [
    "## Populate and execute the CREATE TABLE statement for the music_app_history_user_session table\n",
    "query = \"CREATE TABLE IF NOT EXISTS music_app_history_user_session \"\n",
    "query = query + \"(user_id int, session_id int, item_in_session int, artist text, song text, first_name text, last_name text, PRIMARY KEY ((user_id, session_id), item_in_session)) WITH CLUSTERING ORDER BY (item_in_session DESC)\"\n",
    "try:\n",
    "    session.execute(query)\n",
    "except Exception as e:\n",
    "    print(e)"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {
