    "        \n",
    "## Populate the INSERT statement with the user_id, session_id, item_in_session, artist, song, first_name, and last_name columns.\n",
    "        query = \"INSERT INTO music_app_history_user_session (user_id, session_id, item_in_session, artist, song, first_name, last_name)\"\n",
    "        query = query + \"values(%s, %s, %s, %s, %s, %s, %s)\"\n",
    "        ## Insert the correct data columns from the csv file to the correct data columns in the music_app_history_user_session table\n",
    "        session.execute(query, (int(line[10]), int(line[8]), int(line[3]), line[0], line[9], line[1], line[4]))"
