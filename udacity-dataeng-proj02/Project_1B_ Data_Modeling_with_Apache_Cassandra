   "source": [
    "# csv file\n",
    "file = 'event_datafile_new.csv'\n",
    "\n",
    "# Open and read the csv file\n",
    "with open(file, encoding = 'utf8') as f:\n",
    "    csvreader = csv.reader(f)\n",
    "    next(csvreader) # skip header\n",
    "    for line in csvreader:\n",
    "## Populate the INSERT statement with the user_id, first_name, last_name, and song columns.\n",
    "        query = \"INSERT INTO music_app_history_user_song (user_id, first_name, last_name, song)\"\n",
    "        query = query + \"values(%s, %s, %s, %s)\"\n",
    "        ## Insert the correct data columns from the csv file to the correct data columns in the music_app_history_user_song table\n",
    "        session.execute(query, (int(line[10]), line[1], line[4], line[9]))"
